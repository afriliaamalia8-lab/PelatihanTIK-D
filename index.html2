<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Website Responsif & Interaktif</title>
  <style>
    /* === CSS Dasar === */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: #f4f4f9;
      transition: background 0.3s, color 0.3s;
    }

    header {
      background: #4CAF50;
      color: white;
      padding: 15px;
      text-align: center;
      position: sticky;
      top: 0;
    }

    nav {
      display: flex;
      justify-content: center;
      gap: 15px;
      flex-wrap: wrap;
    }

    nav a {
      color: white;
      text-decoration: none;
      padding: 8px 12px;
      border-radius: 5px;
      transition: background 0.3s;
    }

    nav a:hover {
      background: rgba(255,255,255,0.2);
    }

    main {
      padding: 20px;
      max-width: 1000px;
      margin: auto;
    }

    section {
      margin-bottom: 40px;
    }

    footer {
      background: #333;
      color: white;
      text-align: center;
      padding: 10px;
      margin-top: 20px;
    }

    /* === Tombol umum === */
    button {
      padding: 10px 15px;
      background: #4CAF50;
      border: none;
      color: white;
      cursor: pointer;
      border-radius: 5px;
      transition: background 0.3s;
    }

    button:hover {
      background: #45a049;
    }

    /* === Grid Layout Responsif === */
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 15px;
    }

    .card {
      background: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      transition: transform 0.3s;
    }

    .card:hover {
      transform: scale(1.05);
    }

    /* === Dark Mode === */
    .dark {
      background: #1e1e1e;
      color: white;
    }

    .dark header {
      background: #222;
    }

    .dark footer {
      background: #111;
    }

    .dark .card {
      background: #333;
    }
  </style>
</head>
<body>
  <header>
    <h1>Website Responsif & Interaktif</h1>
    <nav>
      <a href="#tentang">Tentang</a>
      <a href="#galeri">Galeri</a>
      <a href="#kontak">Kontak</a>
      <button id="darkModeBtn">ðŸŒ™ Mode Gelap</button>
    </nav>
  </header>

  <main>
    <!-- Tentang -->
    <section id="tentang">
      <h2>Tentang Website</h2>
      <p>Website ini dibuat dengan layout responsif menggunakan CSS Grid dan interaktivitas sederhana dengan JavaScript.</p>
      <button id="klikBtn">Klik Aku!</button>
      <p id="pesan"></p>
    </section>

    <!-- Galeri -->
    <section id="galeri">
      <h2>Galeri</h2>
      <div class="grid">
        <div class="card">ðŸ“· Foto 1</div>
        <div class="card">ðŸ“· Foto 2</div>
        <div class="card">ðŸ“· Foto 3</div>
        <div class="card">ðŸ“· Foto 4</div>
      </div>
    </section>

    <!-- Kontak -->
    <section id="kontak">
      <h2>Kontak</h2>
      <form id="formKontak">
        <label>Nama: <br><input type="text" id="nama" required></label><br><br>
        <label>Pesan: <br><textarea id="pesanInput" required></textarea></label><br><br>
        <button type="submit">Kirim</button>
      </form>
      <p id="hasilForm"></p>
    </section>
  </main>

  <footer>
    <p>Â© 2025 Website Responsif & Interaktif</p>
  </footer>

  <script>
    // Tombol interaktif
    const tombol = document.getElementById("klikBtn");
    const pesan = document.getElementById("pesan");

    tombol.addEventListener("click", () => {
      pesan.textContent = "Tombol berhasil diklik!";
      pesan.style.color = "blue";
    });

    // Dark Mode
    const darkBtn = document.getElementById("darkModeBtn");
    darkBtn.addEventListener("click", () => {
      document.body.classList.toggle("dark");
      darkBtn.textContent = document.body.classList.contains("dark") ? "â˜€ï¸ Mode Terang" : "ðŸŒ™ Mode Gelap";
    });

    // Form interaktif
    const form = document.getElementById("formKontak");
    const hasilForm = document.getElementById("hasilForm");

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      const nama = document.getElementById("nama").value;
      const pesanInput = document.getElementById("pesanInput").value;
      hasilForm.textContent = `Terima kasih, ${nama}! Pesanmu: "${pesanInput}" sudah terkirim.`;
      form.reset();
    });
  </script>
</body>
</html>vvvvv
